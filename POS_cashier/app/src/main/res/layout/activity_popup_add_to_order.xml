<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".popup_add_to_order">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/btn_kembali"
            android:background="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text_profile"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costumer Profile"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/add_order"
            android:layout_margin="10dp"
            android:text="Add To Order"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/garis10"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/wadah_imageprofile"
        android:layout_below="@+id/garis10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_profile"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_below="@+id/image_profile"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hadi"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/wadah_imageprofile"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/gambar"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/dinein2_icon"/>

        <ListView
            android:id="@+id/list_profile"
            android:layout_toRightOf="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/footer"
        android:id="@+id/footer2"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/gambar2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_calender"/>

        <ListView
            android:id="@+id/list_profile2"
            android:layout_toRightOf="@+id/gambar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/footer2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/txt_edit_profile"
            android:text="Edit Profile"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>